model OrderItem {
    orderId            String
    productId          String
    order              Order   @relation(fields: [orderId], references: [id])
    product            Product @relation(fields: [productId], references: [id])
    productPriceCents  Int
    productSalePercent Int
    quantity           Int
    warrantyDays       Int

    @@id([orderId, productId])
}
